<h2>注文履歴一覧</h2>
<% if @orders.each.count == 0 %>
<p>注文はありません</p>
<% else %>

<table class="table">
   <thead>
     <tr>
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th>注文ステータス</th>
     </tr>
   </thead>
   <tbody>
    <% @orders.each do |o| %>
      <tr>
        <td><%= link_to admin_order_path(o) do %>
              <%= o.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
        </td>
        <td><%= link_to admin_customer_path(o.customer_id) do %>
              <%= o.customer.last_name + o.customer.first_name %>
            <% end %>
        </td>
        <td><%= o.order_details.sum(:amount) %></td>
        <td><%= o.status_i18n %></td>
      </tr>
    <% end %>
   </tbody>
</table>
<%= paginate @orders %>

<% end %>