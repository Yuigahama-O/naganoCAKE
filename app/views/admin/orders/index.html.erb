<h2>注文履歴一覧</h2>

<table class="table">
   <thead>
     <tr>
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th>注文ステータス</th>
     </tr>
   </thead>
   <tbody>
    <% @orders.each do |o| %>
      <tr>
        <td><%= o.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
        <td><%= o.customer.last_name + o.customer.first_name %></td>
        <td><%= o.order_details.sum(:amount) %></td>
        <td><%= o.status_i18n %></td>
      </tr>
    <% end %>
   </tbody>
</table>
<%= paginate @orders %>