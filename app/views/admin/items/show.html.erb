<div class="container px-5 px-sm-0">
    <div class="row">
        <%= link_to admin_items_path do %>
                商品一覧へ
        <% end %>
        <div class="col-sm4">
            
            <%= image_tag @item.get_item_image(100, 100) %>
        </div>
        <div class = "col-sm8">
            <table>
            <tbody>
                <tr>
                    <th>商品名</th>
                    <th><%= @item.name %></th>
                </tr>
                <tr>
                    <th>商品説明</th>
                    <th><%= @item.introduction %></th>
                </tr>
                <tr>
                    <th>税抜価格</th>
                    <th><%= @item.price %></th>
                </tr>
                <tr>
                    <th><%= @item.is_active ? '販売中' : '販売停止中' %></th>
                </tr>
                <tr>
                    <th>
                        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
                    </th>
                </tr>
            </tbody>
            </table>
            
        </div>
    </div>
</div>