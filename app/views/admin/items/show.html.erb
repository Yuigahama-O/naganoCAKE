<div class="container px-5 px-sm-0">
    <div class="row">
        <%= link_to admin_items_path do %>
                商品一覧へ
        <% end %>
        <div class = "col-sm-3"></div>
        <div class="col-sm-3">
            
            <%= image_tag @item.get_item_image(200, 200) %>
        </div>
        <div class = "col-sm-4">
            <table class = "show">
            <tbody>
                <tr>
                    <th>商品名</th>
                    <th><%= @item.name %></th>
                </tr>
                <tr>
                    <th>商品説明</th>
                    <th><%= @item.introduction %></th>
                </tr>
                <tr>
                    <th>税抜価格</th>
                    <th><%= @item.price %></th>
                </tr>
                <tr>
                    <th>ジャンル</th>
                    <th><%= @item.genre.genre %></th>
                </tr>
                <tr>
                    <th>
                        <% if @item.is_active == true %>
                            <div class = "green title">
                                <%= @item.is_active ? '販売中' : '販売停止中' %>
                            </div>
                        <% else %>
                            <div class = "red title">
                                <%= @item.is_active ? '販売中' : '販売停止中' %>
                            </div>
                        <% end %>
                    </th>
                </tr>
                <tr>
                    <th>
                        <div class = "edit">
                            <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
                        </div>
                    </th>
                </tr>
            </tbody>
            </table>
            
        </div>
    </div>
</div>