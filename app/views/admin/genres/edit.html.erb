<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>NEW ITEM</h2>
            <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
                <div class="form-group">
                    <label for="postal_code">ジャンル名</label>
                    <%= f.text_field :genre, class:"form-control name" %>
                <div class="form-group">
                    <%= f.submit '変更内容保存', class:"btn btn-secondary" %>
                </div>
            <% end %>
        </div>
    </div>
</div>