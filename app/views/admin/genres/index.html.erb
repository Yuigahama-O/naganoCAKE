<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>ジャンル一覧</h2>
            <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
                <div class="form-group">
                    <label for="postal_code">ジャンル</label>
                    <%= f.text_field :genre, class:"form-control name" %>
                </div>
                <div class="form-group">
                    <%= f.submit '新規登録', class:"btn btn-secondary" %>
                </div>
            <% end %>
            
            <table class='table'>
                <thead>
                  <tr>
                    <th>ジャンル名</th>
                    <th colspan="1"></th>
                  </tr>
                </thead>
                <tbody>
                <% @genres.each do |genre| %>
                    <tr>
                        <td><%= genre.genre %></td>
                        <td>
                            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
                        </td>
                    </tr>          
                <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>