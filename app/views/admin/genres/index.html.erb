<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>ジャンル一覧・追加</h2>
            <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
            <div class = "row">
                <div class = "col-3">
                    <div class="form-group">
                        <label for="postal_code">ジャンル名</label>
                    </div>
                </div>
                <div class = "col-5">
                    <div class="form-group">
                        <%= f.text_field :genre, class:"form-control name" %>
                    </div>
                </div>
                <div class = "col-2">
                    <div class="form-group">
                        <%= f.submit '新規登録', class:"btn btn-success" %>
                    </div>
                </div>
            </div>
            <% end %>
            
            <table class='table none'>
                <thead>
                  <tr class ="none">
                    <th class = "none genre">　ジャンル</th>
                    <th class = "none genre"></th>
                  </tr>
                </thead>
                <tbody>
                <% @genres.each do |genre| %>
                    <tr class ="none">
                        <td class ="none"><%= genre.genre %></td>
                        <td class ="none">
                            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
                        </td>
                    </tr>          
                <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>