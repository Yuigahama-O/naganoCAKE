<h2>注文履歴一覧</h2>
<% if @orders.each.count == 0 %>
<p>注文はありません</p>
<% else %>

<table class="table">
   <thead>
     <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
     </tr>
   </thead>
   <tbody>
    <% @orders.each do |o| %>
      <tr>
        <td><%= o.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= o.full_address %></td>
        <td><% o.order_details.each do |detail| %>
              <%= detail.item.name %><br />
            <% end %>
        </td>
        <td><%= o.total_payment %>円</td>
        <td><%= o.status_i18n %>
        </td>
        <td><%= link_to "表示する", public_order_path(o), class:"btn btn-primary" %></td>
      </tr>
    <% end %>
   </tbody>
</table>

<% end %>