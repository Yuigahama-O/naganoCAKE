<div class="container-sm">
  <h2 class ="order-title">注文詳細</h2>
  <div class = "row order-show">
    <div class = "col-sm-1"></div>
    <div class = "col-sm-6">
      <h3>注文情報</h3>
      <table class="table">
        <tr>
          <th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <tr>
          <th>配送先</th><td><%= @order.full_address %></td>
        </tr>
        <tr>
          <th>支払方法</th><td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス    </th><td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class = "col-sm-1"></div>
    <div class = "col-sm-4">
      <h3>請求金額</h3>
      <table class="table">
        <tr>
          <th>商品合計</th><td><%= @order_details.sum(&:subtotal) %></td>
        </tr>
        <tr>
          <th>配送料</th><td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th><td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class = "row order-show">
    <div class = "col-sm-1"></div>
    <div class = "col-sm-8">
      <h3>注文内容</h3>
      <table class="table">
        <thead>
          <tr>
            <th>商品　　　　</th>
            <th>単価（税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |o| %>
            <tr>
              <td><%= o.item.name %></td>
              <td><%= o.price %></td>
              <td><%= o.amount %></td>
              <td><%= o.subtotal %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
 
</div>
