<h2>注文情報入力</h2>

<%= form_with model: @order, url: public_orders_confirm_path, method: :post, local: true do |f| %>
  <p>支払方法</p>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method, "クレジットカード" %><br>

  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method, "銀行振込" %>

  <p>お届け先</p>
  <%= f.radio_button :address_option, :my_address %>
  <%= f.label :address_option, "ご自身の住所" %><br>
  <%= current_customer.postal_code %>
  <%= current_customer.address %><br>
  <%= current_customer.last_name %>
  <%= current_customer.first_name %>


  <br>

  <%= f.radio_button :address_option, :choose_address %>
  <%= f.label :address_option, "登録済住所から選択" %>
  <%= f.select :delivery,options_from_collection_for_select(Delivery.all, :id, :full_address) %>


  <br>

  <%= f.radio_button :address_option, :new_address %>
  <%= f.label :address_option, "新しいお届け先" %>

    <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)" %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><br />
    <%= f.text_field :address %>
  </div>

   <div class="field">
    <%= f.label :"名前" %><br />
    <%= f.text_field :name %>
  </div>
  <%= f.submit "確認画面へ進む", class: "btn btn-sm btn-primary" %>

<% end %>




