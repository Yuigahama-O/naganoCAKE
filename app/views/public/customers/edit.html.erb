<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2>会員情報編集</h2>
     　<% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のerrorが発生しました
     　<% end %>
      <%= form_with model:@customer,url:public_customer_path, local:true do |f| %>
      <div class = "row">
    　　<div class = "col-3">
          <div class="form-group">
            <%= f.label :"氏名" %>
          </div>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
          </div>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class = "row">
    　　<div class = "col-3">
          <div class="form-group">
            <%= f.label :"フリガナ" %>
          </div>
        </div>
        <div class ="col-3">                 
          <div class="form-group">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
          </div>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　<div class = "col-3">
          <div class="form-group">
            <%= f.label :"郵便番号" %>
          </div>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　<div class = "col-3">
          <div class="form-group">
            <%= f.label :"住所" %>
          </div>
        </div>
        <div class = "col-8">
          <div class="form-group">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class = "row">
    　　<div class = "col-3">
          <div class="form-group">
            <%= f.label :"電話番号" %>
          </div>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　<div class = "col-3">
          <div class="form-group">
            <%= f.label :"メールアドレス" %>
          </div>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class = "customer-btn">   
        <div class="customer-edit" style="display:inline">
          <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
        </div>
        
        <div style="display:inline" class= "customer-edit-destroy">
          <span><%= link_to public_customers_confirm_path(), class: "btn btn-danger confilm_public_customer_#{@customer.id}" do %> 退会する<% end %></span>
        </div>
      </div>
      
        
      <% end %>
    </div>
  </div>
</div>
