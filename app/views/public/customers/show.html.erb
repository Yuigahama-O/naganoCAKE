<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2 class="item-title-name">マイページ</h2>
       <div class = "customer-show-title">
            <h3 style="display:inline">登録情報</h3>
            <span style="display:inline"> <%= link_to edit_public_customer_path(@customer),class: "btn btn-success edit_public_customer_#{@customer.id}" do %> 編集する<% end %></span>
       </div>
       <div class = "customer-show">
          <table class="table">
               <tbody>
                  <tr>
                     <th>氏名</th>
                     <th class = "show-name"><%= @customer.last_name %> <%= @customer.first_name %></th>
                  </tr>
                  <tr>
                     <th>フリガナ</th>
                     <th class = "show-name"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
                  </tr>
                  <tr>
                     <th>郵便番号</th>
                     <th class = "show-name"> <%= @customer.postal_code %></th>
                  </tr>
                  <tr>
                     <th>住所</th>
                     <th class = "show-name"><%= @customer.address %></th>
                  </tr>
                  
                     <th>電話番号</th>
                     <th class = "show-name"><%= @customer.phone_number %></th>
                  </tr>
                  <tr>
                     <th>メールアドレス</th>
                     <th class = "show-name"><%= @customer.email %></th>
                  </tr>
              </tbody>
          </table>
       </div>
       <div class='field'>
         <h3 style="display:inline">配送先　</h3><span class="delivery"> <%= link_to public_deliveries_path(),class: "btn btn-primary edit_public_deliveries" do %>  一覧を見る<% end %></span>
       </div>
       <div class='field'>
         <h3 style="display:inline">注文履歴</h3>
       <span class="delivery"><%= link_to public_orders_path(),class: "btn btn-primary edit_public_item" do %>  一覧を見る<% end %></span>
       </div>
    </div>
  </div>
</div>
     