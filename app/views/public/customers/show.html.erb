<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2>マイページ</h2>
       <div>
             <h3>登録情報</h3>
              <span> <%= link_to edit_public_customer_path(@customer),class: "btn btn-outline-secondary btn-block edit_public_customer_#{@customer.id}" do %> 編集する<% end %></span>
       </div>
       <div class="field">
          <span>氏名</span>
          <span><%= @customer.last_name %> <%= @customer.first_name %></span>
       </div>
       <div class="field">
          <span>フリガナ</span>
          <span><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></span>
       </div>
       <div class="field">
          <span>郵便番号</span>
          <span> <%= @customer.postal_code %></span>
       </div>
       <div class="field">
          <span>住所</span>
          <span><%= @customer.address %></span>
       </div>
       <div class="field">
          <span>電話番号</span>
          <span><%= @customer.phone_number %></span>
       </div>
       <div class="field">
          <span>メールアドレス</span>
          <span><%= @customer.email %></span>
       </div>
       <div class="field">
          <span>ステータス</span>
          <span><%= @customer.is_deleted %></span>
       </div>
       <div class='field'>
         <h3>配送先</h3>
         <span> <%= link_to public_deliveries_path(),class: "btn btn-outline-secondary btn-block edit_public_deliveries" do %>  一覧画面を見る<% end %></span>
       </div>
       <div class='field'>
         <h3>注文履歴</h3>
       <span> <%= link_to public_items_path(),class: "btn btn-outline-secondary btn-block edit_public_item" do %>  一覧画面を見る<% end %></span>
       </div>
    </div>
  </div>
</div>
     

<div>
      <p><%= button_to destroy_customer_session_path, method: :delete do %>
              logout
                      <% end %>
      </p>
</div>