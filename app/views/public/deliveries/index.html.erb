<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <h2 class="delivery-title">配送先登録/一覧</h2>
            <%= form_with model: @delivery, url: public_deliveries_path, method: :post do |f| %>
                <div class = "new">
                    <div>郵便番号（ハイフンなし)</div>
                    <div class="col-sm-4">
                        <%= f.text_field :postal_code, class:"form-control name" %>
                    </div>
                </div>
                <div class = "new">
                    <div class="delivery-address">住所</div>
                    <div class="col-sm-8">
                        <%= f.text_field :address, class:"form-control name" %>
                    </div>
                </div>
                <div class = "new">
                    <div class="delivery-name">宛名</div>
                    <div class="col-sm-4">
                        <%= f.text_field :name, class:"form-control" %>
                    </div>
                    <div>
                        <%= f.submit '新規登録', class:"btn btn-success new-btn" %>
                    </div>
                </div>
            <% end %>
            
            <table class='table'>
                <thead>
                  <tr>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th colspan="2"></th>
                  </tr>
                </thead>
                <tbody>
                <% @deliveries.each do |delivery| %>
                    <tr>
                        <td><%= delivery.postal_code %></td>
                        <td><%= delivery.address %></td>
                        <td><%= delivery.name %></td>
                        <td class = "delivery-index">
                            <%= link_to "編集する", edit_public_delivery_path(delivery.id), class: "btn btn-sm btn-success" %>
                            <%= link_to "削除する", public_delivery_path(delivery.id), class: "btn btn-sm btn-danger", method: :delete %>
                        </td>
                    </tr>          
                <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div>
    