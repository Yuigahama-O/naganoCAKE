<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2 class = "item-title-name">配送先編集</h2>
            <%= form_with model: @delivery, url: public_delivery_path(@delivery.id), method: :patch do |f| %>
                <div class="form-group">
                    <label for="postal_code">郵便番号（ハイフンなし）</label>
                    <%= f.text_field :postal_code, class:"form-control name" %>
                </div>
                <div class="form-group">
                    <label for="postal_code">住所</label>
                    <%= f.text_field :address, class:"form-control name" %>
                </div>
                <div class="form-group">
                    <label for="item_introduction">宛名</label>
                    <%= f.text_field :name, class:"form-control name" %>
                </div>
                <div class="form-group">
                    <%= f.submit '変更内容保存', class:"btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>