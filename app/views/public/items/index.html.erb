<h2>商品一覧</h2>
<div class = "container">
    <div class = "row">
        <% @items.each do |item| %>
            <div class = "col-md-4">
                 <div class="card">
                    <%= link_to public_item_path(item.id) do %>
                        <%= image_tag item.get_item_image(100, 100) %>
                        <div class="card-body text-center">
                            <%= item.name %>
                        </div>
                        <div class="card-body text-center">
                            <%= item.price %>
                        </div>
                    <% end %>  
                </div>
            </div>
        <% end %>
    </div>
</div>