
<div class = "container-sm" >
    <div class = "row">
    <div class ="title-name">    
        <h2 style="display:inline">商品一覧 </h2> <p style="display:inline">(全<%= @item_all.count %>件)</p>
    </div>
    </div>
    
    <div class = "row">
        
        <% @items.each do |item| %>
            
                <div class="index-card">
                    <%= link_to public_item_path(item.id), {class: "link"} do %>
                        <div class = "index-body">
                            <%= image_tag item.get_item_image(150, 150) %>
                        </div>    
                        <div class="index-title">
                            <%= item.name %>
                        </div>
                        <div class="index-title">
                            <%= item.price %>円（税抜き）
                        </div>
                    <% end %> 
                </div>
             
        <% end %>
    </div>
    <%= paginate @items %>
    
</div>
       
    
    
    
 

