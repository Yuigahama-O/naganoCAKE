<div class = "container">
  <div class = "row">
    <div class = "col-sm-1"></div>
    <div class = "col-sm-11">
      <h2 class= "login-text">新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <div class = "row">
    　　<div class = "signup-name">
          <div class="field">
            <%= f.label :"名前" %><br />
          </div>
        </div>
        <div>
          <span>(姓)　</span>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
          </div>
        </div>
        <div>
          <span>(名)　</span>
        </div>
        <div class = "col-3">
          <div class="form-group">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class = "row">
    　　<div class = "signup-name">
          <div class="field">
            <%= f.label :"フリガナ" %>
          </div>
        </div>
        <div>
          <span>(セイ)</span>
        </div>
        <div class = "col-3">
          <div class="field">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control" %>
　        </div>
        </div>
        <div>
          <span>(メイ)</span>
        </div>
        <div class = "col-3">
          <div class="field">
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control" %>
          </div>
        </div>
      </div>
      <div class = "row">
    　  <div class ="signup-email">
          <div class="field">
            <%= f.label :"　メールアドレス" %>
          </div>
        </div>
        <div class = "col-6">
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　 <div class ="signup-text">  
          <div class="field">
            <%= f.label :"郵便番号(ハイフンなし)" %>
          </div>
        </div>
        <div class = "col-6">  
          <div class="field">
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　 <div class ="signup-text"> 
          <div class="field">
            <%= f.label :"住所" %> 
          </div>
        </div>
        <div class = "col-6">  
          <div class="field">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　<div class = "signup-text">
          <div class="field">
            <%= f.label :"電話番号（ハイフンなし）" %>
          </div>
        </div>
        <div class = "col-6"> 
          <div class="field">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　 <div class ="signup-text">
          <div class="field">
            <%= f.label :"パスワード(6文字以上)" %>
          </div>
        </div>
        <div class = "col-6"> 
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>
      </div>
      
      <div class = "row">
    　　<div class="signup-text"> 
          <div class="field">
            <%= f.label :"パスワード(確認用)" %>
          </div>
        </div>
        <div class = "col-6"> 
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>
        </div>
      </div>
      
        <div class="signup-actions">
          <%= f.submit "新規登録",class:'btn btn-success' %>
        </div>
      <% end %>
      
      <p class = "login-text">既に登録済みの方</p>
      <%= link_to new_customer_session_path do %>こちら<% end %> <span>からログインしてください</span>
      
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>